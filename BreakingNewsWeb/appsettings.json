{
  "spring": {
    "application": {
      "name": "breaking-news-web"
    },
    "cloud": {
      "config": {
        "validateCertificates": false,
        "failFast": false,
        "discovery": {
          "enabled": true
        },
        "health": {
          "enabled": true
        }
      }
    }
  },
  "eureka": {
    "client": {
      "shouldRegisterWithEureka": false,
      "serviceUrl": {
        "defaultZone": "http://localhost:8761/eureka/"
      },
      "shouldFetchRegistry": true,
      "validateCertificates": false
    },
    "instance": {
      "hostname": "localhost"
    }
  },
  "hystrix": {
    "command": {
      "default": {
        "circuitBreaker": {
          "enabled": true,
          "requestVolumeThreshold": 3,
          "sleepWindowInMilliseconds": 5000,
          "errorThresholdPercentage": 50
        }
      }
    },
    "stream": {
      "validate_certificates": false
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
